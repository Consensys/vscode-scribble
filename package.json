{
    "name": "vscode-scribble",
    "description": "A Scribble embedded annotation language for Solidity",
    "keywords": [
        "scribble",
        "languages",
        "snippets"
    ],
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "preview": true,
    "author": "ConsenSys Diligence",
    "icon": "media/icon.png",
    "license": "Apache-2.0",
    "version": "1.2.5",
    "repository": {
        "type": "git",
        "url": "https://github.com/ConsenSys/vscode-scribble"
    },
    "bugs": {
        "url": "https://github.com/ConsenSys/vscode-scribble/issues"
    },
    "publisher": "diligence",
    "main": "./build/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run transpile",
        "build": "npm run transpile",
        "transpile": "tsc -p ./",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^20.11.16",
        "@types/vscode": "^1.86.0",
        "@typescript-eslint/eslint-plugin": "^6.20.0",
        "@typescript-eslint/parser": "^6.20.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "prettier": "3.2.5",
        "typescript": "^5.3.3"
    },
    "engines": {
        "vscode": "^1.62.0"
    },
    "activationEvents": [
        "onLanguage:solidity"
    ],
    "contributes": {
        "languages": [
            {
                "id": "scribble",
                "aliases": [
                    "Scribble",
                    "scribble",
                    "scrib",
                    "scr"
                ],
                "extensions": [
                    ".scr",
                    ".scrib"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "scribble",
                "path": "./syntaxes/scribble.tmLanguage.json",
                "scopeName": "source.scribble"
            },
            {
                "path": "./syntaxes/scribble-inject.tmLanguage.json",
                "scopeName": "source.scribble.injection",
                "injectTo": [
                    "source.solidity"
                ],
                "embeddedLanguages": {
                    "meta.embedded.block.scribble": "scribble"
                },
                "tokenTypes": {
                    "meta.embedded.block.scribble": "other"
                }
            }
        ],
        "snippets": [
            {
                "language": "scribble",
                "path": "./snippets/scribble.json"
            }
        ]
    },
    "extensionDependencies": [
        "juanblanco.solidity"
    ]
}
